@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Restaurant

<h2>Restaurant Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>
<h3>@Html.DisplayNameFor(model => model.Location): @Html.DisplayFor(model => model.Location)<h3>
<h3>@Html.DisplayNameFor(model => model.CostRange): @Html.DisplayFor(model => model.CostRange)<h3>
<h3>@Html.DisplayNameFor(model => model.Rating): @Html.DisplayFor(model => model.Rating)<h3>
<h3>@Html.DisplayNameFor(model => model.Cuisine.Name): @Html.DisplayFor(model => model.Cuisine.Name)<h3>

<p>@Html.ActionLink("Show reviews", "IndexSpecific", "Reviews", new { id = Model.RestaurantId })</p>
<p>@Html.ActionLink("Edit Restaurant", "Edit", new { id = Model.RestaurantId })</p>
<p>@Html.ActionLink("Delete Restaurant", "Delete", new { id = Model.RestaurantId })</p>
<p>@Html.ActionLink("Back to list", "IndexSpecific", new { id = Model.RestaurantId })</p>
<p>@Html.ActionLink("Show all restaurants", "Index")</p>